@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Expense Details";
}

<h1>Expense Details</h1>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("0.00")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
